{
  "Comment": "A Hello World example of the Amazon States Language using an AWS Lambda Function",
  "StartAt": "HelloWorld",
  "States": {
    "HelloWorld": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke",
      "Parameters": {
        "FunctionName": ${jsonencode(hello_fn_name)},
        "Payload": {
          "stage.$": "$.stage",
          "failStages.$": "$.failStages"
        }
      },
      "End": true
    }
  }
}
